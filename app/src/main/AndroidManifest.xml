<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.karhades_pc.tag_it">

    <!-- Permission to use NFC -->
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/puzzle"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.karhades_pc.tag_it.MainActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- The android system searches for these filters-->
            <!-- and matches with the appropriate one that-->
            <!-- corresponds to the tag-->

            <!-- NDEF_DISCOVERED-->
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <!-- Custom URI: kar://karhades-->
                <data android:mimeType="application/com.example.karhades_pc.nfchandler" />
            </intent-filter>

            <!--TECH_DISCOVERED-->
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />

            <!--TAG_DISCOVERED-->
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
            </intent-filter>

        </activity>

        <activity
            android:name=".TagPagerActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.karhades_pc.tag_it.MainActivity" />
        </activity>

        <activity
            android:name=".CreateTagActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.karhades_pc.tag_it.MainActivity" />
        </activity>

    </application>

</manifest>
