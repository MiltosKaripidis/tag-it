<resources>

    <!-- Default app style-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Background color-->
        <item name="android:colorBackground">@color/background</item>

        <!-- App colors-->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorControlActivated">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Contextual action bar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/accent</item>

        <!-- Status bar-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Transitions-->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/tracking_shared_element
        </item>
        <item name="android:windowSharedElementReturnTransition">
            @transition/tracking_shared_element
        </item>
        <item name="android:windowEnterTransition">
            @transition/tracking_game_window_enter_transition
        </item>
        <item name="android:windowReturnTransition">
            @transition/tracking_game_window_return_transition
        </item>

        <!-- Custom ActionMode popup-->
        <item name="actionBarPopupTheme">@style/AppTheme.ActionMode.Overflow</item>

        <!-- Custom alert dialog-->
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>

        <!-- Custom spinner-->
        <item name="android:spinnerItemStyle">@style/AppTheme.Spinner</item>
    </style>

    <!-- Style for the fullscreen activity-->
    <style name="AppTheme.Fullscreen">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Style for the settings activity-->
    <style name="AppTheme.Settings">
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Custom style for the ActionMode's popup menu-->
    <style name="AppTheme.ActionMode.Overflow" parent="@android:style/Theme.Material.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Custom style for the alert dialog-->
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Title color-->
        <item name="android:textColor">@color/primary_text</item>
        <!-- Message color-->
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <!-- Buttons color-->
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Custom style for the spinner-->
    <style name="AppTheme.Spinner" parent="@android:style/Widget.Material.TextView.SpinnerItem">
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources>
