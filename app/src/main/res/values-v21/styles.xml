<resources>

    <!-- Default app style-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Background color-->
        <item name="android:windowBackground">@color/background</item>

        <!-- App colors-->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorControlActivated">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:editTextColor">@color/secondary_text</item>

        <!-- Contextual action bar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/accent</item>

        <!-- Status bar-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Custom ActionMode popup-->
        <item name="actionBarPopupTheme">@style/AppTheme.ActionMode.Overflow</item>

        <!-- Custom alert dialog-->
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>

        <!-- Custom spinner-->
        <item name="android:spinnerItemStyle">@style/AppTheme.Spinner</item>

        <!-- Activity enter transition-->
        <item name="android:windowEnterTransition">@transition/fade</item>

        <!-- Custom back navigation icon-->
        <item name="navigationIcon">@drawable/vector_back</item>
    </style>

    <!-- TrackTagPagerActivity theme-->
    <style name="AppTheme.TrackTagPagerActivity">
        <item name="android:windowEnterTransition">@transition/slide_with_fade</item>
    </style>

    <!-- FullscreenActivity theme-->
    <style name="AppTheme.Fullscreen">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- SettingsActivity theme-->
    <style name="AppTheme.SettingsActivity">
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- CreateTagActivity theme-->
    <style name="AppTheme.CreateTagActivity">
        <item name="android:statusBarColor">@color/accent_dark</item>
        <item name="android:colorControlNormal">@android:color/white</item>

        <!-- TextInputEditText edit hint text color-->
        <item name="android:editTextColor">@color/white_secondary_text</item>

        <!-- Custom spinner-->
        <item name="android:spinnerItemStyle">@style/AppTheme.StatusBar.Spinner</item>
    </style>

    <!-- Custom style for the TextInputEditText-->
    <style name="AppTheme.StatusBar.TextInputEditText" parent="@android:style/TextAppearance">
        <!-- Label color-->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Custom style for the spinner-->
    <style name="AppTheme.StatusBar.Spinner" parent="@android:style/Widget.Material.TextView.SpinnerItem">
        <item name="android:textColor">@color/white_secondary_text</item>
    </style>

    <!-- Custom style for the ActionMode's popup menu-->
    <style name="AppTheme.ActionMode.Overflow" parent="@android:style/Theme.Material.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Custom style for the alert dialog-->
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Title color-->
        <item name="android:textColor">@color/primary_text</item>
        <!-- Message color-->
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <!-- Buttons color-->
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Custom style for the spinner-->
    <style name="AppTheme.Spinner" parent="@android:style/Widget.Material.TextView.SpinnerItem">
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources>
