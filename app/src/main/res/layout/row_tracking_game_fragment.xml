<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tracking_card_view"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:foreground="@drawable/selector_touch_effect"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/row_tracking_image_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_no_image" />

        <TextView
            android:id="@+id/row_tracking_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_tracking_image_view"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/tag_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/row_tracking_difficulty_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_tracking_title_text_view"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text="HARD"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/row_tracking_solved_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/row_tracking_image_view"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:button="@drawable/selector_solved_check_box"
            android:enabled="false" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

