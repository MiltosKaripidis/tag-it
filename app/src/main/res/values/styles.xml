<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- App colors-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>

        <!-- Contextual action bar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/accent</item>

        <!-- Custom back navigation icon-->
        <item name="navigationIcon">@drawable/vector_back</item>
    </style>

    <style name="AppTheme.TrackTagPagerActivity" />

    <!-- FullscreenActivity theme-->
    <style name="AppTheme.Fullscreen" />

    <style name="AppTheme.SettingsActivity" />

    <style name="AppTheme.CreateTagActivity" />
</resources>
